@page
@using net_coapinoles.Models.DTO
@model net_coapinoles.Pages.Shared.Components.Modals.PaymentsModel
@{
    Layout = null;
}

<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="staticBackdropLabel">
                Pagos de la reserva @Model.reserve.Confirmacion
            </h5>
            <button type="button" class="btn-close" data-coreui-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <div class="container">
                @if (Model.reserve.pagos.Count > 0) {
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Fecha</th>
                                <th scope="col">Abono</th>
                                <th scope="col">Método de pago</th>
                                <th scope="col">Estado</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (ReqPagos pago in Model.reserve.pagos) {
                                <tr>
                                    <th scope="row">
                                        @DateTime.Parse(pago.Fechapago).ToString("dd/MM/yyyy")
                                    </th>
                                    <td>$@pago.Total</td>
                                    <td>@pago.FormaPago</td>
                                    <td class="p-0 m-0">
                                        @{
                                            bool estatus = pago.Estatus == 1;
                                            string type = estatus ? "success" : "danger";

                                            <button data-vigent="@estatus" data-id="@pago.Id" class="btn btn-@type h-100 w-100 text-white status-pay-btn opacity-75">
                                                @(estatus ? "Pagado" : "Cancelado")
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else {
                    <div class="d-flex flex-column justify-content-center align-items-center text-muted">
                        <i class="bi bi-inbox-fill display-1"></i>
                        <span class="fs-6">
                            No se encontraron pagos
                        </span>
                    </div>
                }
            </div>
        </div>
        <div class="modal-footer">
            <input type="button" class="btn btn-secondary" data-coreui-dismiss="modal" value="Cerrar" />
            
            @if (Model.reserve.pagos.Count > 0){
                <button type="button" class="btn btn-primary btn-submit-payments" disabled>
                    <i class="bi bi-check-circle-fill me-1"></i>
                    Aplicar cambios
                </button>
            }
        </div>
    </div>
</div>