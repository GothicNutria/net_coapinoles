@model string[]
<div style="min-height: 400px; position: relative;">
    <div id="spinner-table" class="position-absolute start-50 translate-middle-x top-50 translate-middle-y" style="width: fit-content">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
    <div class="w-100 overflow-x-auto" style="display: none" id="container-table">
        <table class="display w-100" id="displayTable">
            <thead>
                <tr>
                    @foreach(string column in Model)
                    {
                        <th scope="col">@column</th>
                    }
                </tr>
            </thead>
        </table>
    </div>
</div>